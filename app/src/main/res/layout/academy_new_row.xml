            <kingdom.strategy.war.customViews.WkLinearLayout android:gravity="center" android:id="@id/btn_improve" android:layout_width="wrap_content" android:layout_height="wrap_content" custom:wkHeight="6h" custom:wkWidth="20w" style="@style/BlueButtonStyle">
                <kingdom.strategy.war.customViews.WkImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mono_upgrade_blue" custom:wkHeight="4.5h" custom:wkWidth="4.5h" />
