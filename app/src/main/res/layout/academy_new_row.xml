        </LinearLayout>
        <kingdom.strategy.war.customViews.WkTextView android:id="@id/tv_information" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/SmallContentTextStyle" />
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/ll_normal_part" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <kingdom.strategy.war.customViews.WkImageView android:id="@id/imageView4" android:background="@drawable/gold" android:layout_width="wrap_content" android:layout_height="wrap_content" custom:wkHeight="5w" custom:wkWidth="5w" />
            <kingdom.strategy.war.customViews.WkLinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" custom:wkHeight="5w" custom:wkWidth="10w">
                <kingdom.strategy.war.customViews.WkTextView android:gravity="center_vertical" android:id="@id/tv_cost" android:layout_width="fill_parent" android:layout_height="wrap_content" custom:wkHeight="5w" custom:wkWidth="10w" style="@style/CountdownTextStyle" />
            </kingdom.strategy.war.customViews.WkLinearLayout>
            <kingdom.strategy.war.customViews.WkImageView android:id="@id/imageView5" android:background="@drawable/timer" android:layout_width="wrap_content" android:layout_height="wrap_content" custom:wkHeight="5w" custom:wkWidth="5w" />
            <kingdom.strategy.war.customViews.WkLinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" custom:wkHeight="5w" custom:wkWidth="18w">
